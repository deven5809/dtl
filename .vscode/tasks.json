{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Build",
			"type": "shell",
			"command": "./build.sh",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"absolute"
				]
			}
		},
		{
			"label": "Test",
			"type": "shell",
			"command": "./test.sh",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			},
			"problemMatcher": {
				"base": "$gcc",
				"fileLocation": [
					"absolute"
				]
			}
		},
	]
}